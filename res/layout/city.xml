<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/son" >
	
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="40dp" >
	    
	    <TextView 
		    android:id="@+id/city_name"
		    android:textSize="14sp"		    
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerVertical="true"
		    android:layout_marginLeft="25dp" />  
		    
	    <TextView 
		    android:id="@+id/city_state"
		    android:textSize="12sp"		    
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerVertical="true"
		    android:layout_toRightOf="@id/city_name"
		    android:layout_marginLeft="10dp" />
	    
	    <ImageView
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:id="@+id/city_imageview"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingRight="15dp"
	        android:src="@drawable/offline_download" />
	    
	    <TextView 
		    android:id="@+id/city_size"
		    android:textSize="12sp"		    
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_toLeftOf="@id/city_imageview"
		    android:layout_centerVertical="true"
		    android:layout_marginRight="3dp" />
	    
	    <View
	        android:layout_below="@id/city_state"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="13dp"
	        android:layout_marginTop="7dp"        
            android:background="@drawable/divider_group"
            android:layout_width="match_parent" 
            android:layout_height="1.0dp" />
	
	</RelativeLayout>

</LinearLayout>
